@using SP_ASPNET_1.BusinessLogic

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title School Project</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <header class="header">
        <div class="header__navbar">
            <img #logo src="~/Content/images/logo.png" /> <span class="spacer"></span>
            <nav>
                <ul>
                    <li><a href="@Url.Action("Index", "Home")" class="@(@Html.IsActive("Home", "Index"))">HOME</a></li>
                    <li>
                        <a href="@Url.Action("About", "Home")" class="@(@Html.IsActive("Home", "About"))">ABOUT</a>
                        <ul>
                            <li><a href="">PRODUCT</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="@Url.Action("Blog", "Home")" class="@(@Html.IsActive("Home", "Blog,SinglePost"))">BLOG</a>
                        <ul>
                            <li><a href="@Url.Action("SinglePost", "Home")" class="@(@Html.IsActive("Home", "SinglePost"))">SINGLE POST</a></li>
                        </ul>
                    </li>
                    <li><a href="@Url.Action("Contact", "Home")" class="@(@Html.IsActive("Home", "Contact"))">CONTACT</a></li>
                </ul>
            </nav>
        </div>
    </header>
    @RenderBody()
    <footer>
        <div>
            <div class="container">
                <div class="social">
                    <a href="#" class="facebook"></a>
                    <a href="#" class="googleplus"></a>
                    <a href="#" class="pinterest"></a> <a href="#" class="twitter"></a>
                </div>
                <p>© 2023 FeelaV. All Rights Nonreserved.</p>
            </div>
        </div>
    </footer>
    @RenderSection("scripts", required: false)
</body>
</html>
